<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@color/white"
    android:elevation="@dimen/separator_height"
    android:orientation="horizontal"
    tools:targetApi="lollipop">

    <TextView
        android:id="@+id/sound_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="10dp"
        android:textSize="20sp"
        tools:text="Đọc dòng này" />

    <ImageButton
        android:id="@+id/export_button"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@string/desc_export"
        app:srcCompat="@drawable/ic_export" />

    <ImageButton
        android:id="@+id/fullscreen_button"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@string/desc_fullscreen"
        app:srcCompat="@drawable/ic_fullscreen" />
</LinearLayout>

